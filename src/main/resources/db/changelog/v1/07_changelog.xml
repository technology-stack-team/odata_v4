            </column>
            <column name="Name" type="VARCHAR(250)"/>
            <column name="IataCode" type="VARCHAR(250)"/>
            <column name="Loc" type="JSON"/>
            <column name="latitude" type="DECIMAL"/>
            <column name="longitude" type="DECIMAL"/>
            <column name="IsInsideCity" type="BOOLEAN"/>
