<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
		http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
    <changeSet id="v1-05-01" author="rahul-jain">
        <createTable schemaName="${schemaName}"  tableName="PersonFeature">
            <column name="UserName" type="VARCHAR(250)">
                <constraints nullable="false"/>
            </column>
            <column name="Features" type="SMALLINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="v1-05-02" author="rahul-jain">
        <addForeignKeyConstraint baseTableSchemaName="Trippin" baseTableName="PersonFeature" baseColumnNames="UserName" constraintName="Person_PersonFeature_fk" referencedTableName="Person"
                                 referencedColumnNames="UserName" referencedTableSchemaName="Trippin"/>
    </changeSet>
    <changeSet id="v1-05-03" author="rahul-jain">
        <sql>
            insert into ${schemaName}.PersonFeature values ( 'russellwhyte' , 1);
        </sql>
        <sql>
            insert into ${schemaName}.PersonFeature values ( 'russellwhyte' , 2);
        </sql>
    </changeSet>
</databaseChangeLog>

